{
    "name": "iclicker-watcher",
    "description": "Description for extension (CHANGE LATER)",
    "manifest_version": 3,
    "version": "1.0.0",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png"
      },
      "default_popup": "popup.html",
      "default_title": "Open the popup"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [],
    "content_scripts": [
      {
        "matches": [
          "*://*/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ]
  }